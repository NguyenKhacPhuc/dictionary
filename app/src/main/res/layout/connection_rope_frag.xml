<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#fff5cc">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/holderList">
            <TextView
                android:id="@+id/process"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/rope_preview"
                android:text="Kĩ thuật nối dây cách 1"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/processItem"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/process"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#fff5cc"
                />
            <ImageView
                android:id="@+id/image11"
                android:layout_width="300dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/processItem"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/noiday11"/>
            <ImageView
                android:id="@+id/image12"
                android:layout_width="210dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/image11"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/noiday12"/>
            <ImageView
                android:id="@+id/image13"
                android:layout_width="200dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/image11"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/noiday13"/>

            <TextView
                android:id="@+id/process2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image13"
                android:text="Kĩ thuật nối dây cách 2"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/processItem2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/process2"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#fff5cc"
                />
            <ImageView
                android:id="@+id/image21"
                android:layout_width="300dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/processItem2"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/noiday21"/>
            <ImageView
                android:id="@+id/image22"
                android:layout_width="260dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/image21"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@drawable/noiday22"/>
            <ImageView
                android:id="@+id/image23"
                android:layout_width="150dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toBottomOf="@id/image21"
                android:layout_marginTop="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/noiday23"/>

            <TextView
                android:id="@+id/process3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image23"
                android:text="Kĩ thuật nối dây cách 3"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/processItem3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/process3"
                app:layout_constraintRight_toRightOf="parent"
                android:background="#fff5cc"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                app:layout_constraintTop_toBottomOf="@id/processItem3"
                app:layout_constraintLeft_toLeftOf="parent">
                <ImageView
                    android:id="@+id/image31"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/noiday31"/>
                <ImageView
                    android:id="@+id/image32"
                    android:layout_width="210dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/image31"
                    android:layout_marginTop="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/noiday32"/>
                <ImageView
                    android:id="@+id/image33"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/image31"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/noiday33"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>