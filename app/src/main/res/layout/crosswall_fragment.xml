<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff5cc"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainContent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:elevation="4dp"
            android:background="@drawable/round"
            android:id="@+id/description">
            <TextView
                android:id="@+id/desc_label"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Mô tả"
                android:textSize="14sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <TextView
                android:id="@+id/desc_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/desc_label"
                android:text="@string/cross_wall_desc"
                android:textAlignment="textStart"
                android:textSize="14sp"
                android:paddingLeft="18dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp"
                android:paddingRight="4dp"
                android:textColor="@color/black_overlay"
                android:fontFamily="sans-serif-condensed-medium"
                app:layout_constraintLeft_toLeftOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/criteria"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingBottom="20dp"
                />
            <TextView
                android:id="@+id/noticeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="NOTICE:"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/criteria"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="bold|italic"
                android:textColor="@color/red"/>
            <TextView
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:text="-Khi tiếp đất, hai chân hơi chùng và ở tư thế chân trước chân sau"
                app:layout_constraintTop_toBottomOf="@id/noticeLabel"
                app:layout_constraintLeft_toLeftOf="parent"
                android:textStyle="italic"
                android:layout_marginLeft="24dp"
                android:paddingRight="12dp"
                android:textColor="@color/black_overlay"/>
            <TextView
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="-Khi hai chân lăng qua tường, tay phải đẩy mạnh vào tường thì tay trái cũng đẩy và rời khỏi mép tường. Nếu tay trái vẫn bám hoặc rời tường chậm thì khi tiếp đất, chiến sỹ sẽ bị kéo giật trở lại gây chấn thương"
                app:layout_constraintTop_toBottomOf="@id/first"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:paddingRight="12dp"
                android:textStyle="italic"
                android:paddingBottom="24dp"
                android:textColor="@color/black_overlay"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>